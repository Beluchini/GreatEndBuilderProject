@page "/deliverey"
@using BuildShop.Database
@using BuildShop.Model
@rendermode InteractiveServer
@inject BuildContext ef
<div class="CatalogHead2">
    <div class=DP1>
        <div class="DP1">
            <a href="https://localhost:7283/" class="Name">
                <div class="HomeImage">
                    <img class="HomeImage" src="Frame 1.png"/>
                </div>
                <p class="Div">СтройДом</p>
            </a>
            <div class="DP1">
                <div class="DP2">
                    <a href="https://localhost:7283/" class="Catalog2">Каталог</a>
                    <a href="https://localhost:7283/error" class="Catalog">Корзина</a>
                </div>
                <div class="Categories2">
                    <div class="parent">
                        @foreach (var item in ef.Categories.ToList())
                        {
                            <div class="Type2">
                                <p>@item.Type</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>
<div class="BuyHead">
    <div>
        <h1>Отлично, теперь к оплате</h1>
    </div>
    <div class="DP1">
        <div class="card">
            <p>Введите фамилию</p>
            <input placeholder="Иванов" type="text"/>
            <p>Введите имя</p>
            <input placeholder="Иван" type="text"/>
            <p>Введите отчество</p>
            <input placeholder="Иванович" type="text"/>
            <div class="parent">
                <input type="text" placeholder="Введите номер карты"/>
                <input type="text" placeholder="CVC/CVV"/>
                <input type="text" placeholder="00/00"/>
            </div>
        </div>
        <div>
            <EditForm FormName="formAddItem" Model="_client" OnValidSubmit="@Submit">
                <DataAnnotationsValidator></DataAnnotationsValidator>
                <p>Введите NickName</p>
                <input type="text" @bind="_client.NickName"/>
                <p>Введите Email</p>
                <input type="text" @bind="_client.Email"/>
                <p>Введите страну доставки</p>
                <input type="text" @bind="_order.Country"/>
                <p>Введите город доставки</p>
                <input type="text" @bind="_order.City"/>
                <p>Введите адресс доставки</p>
                <input type="text" @bind="_order.Addres"/>
                <button type="submit">Заказать</button>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private Client _client = new Client();
    private Order _order = new Order();
    private Delivery _delivery = new Delivery();
    private void Submit(EditContext arg)
    {
        ef.Add(_client);
        ef.Add(_order);
        ef.SaveChanges();
        _client = new Client();
        _order = new Order();
    }
}